# ============================================================================
# Environment Configuration
# ============================================================================

# Application settings
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# ============================================================================
# Twilio Configuration
# ============================================================================

# Twilio Account Credentials
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here

# Twilio Phone Number (from number for outbound calls)
# Format: +1XXXXXXXXXX
TWILIO_FROM_NUMBER=+1234567890

# ============================================================================
# MongoDB Configuration
# ============================================================================

# MongoDB Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
# or: mongodb://localhost:27017/database
MONGO_URI=mongodb://localhost:27017/atlas
MONGO_DB=atlas

# ============================================================================
# Application URLs
# ============================================================================

# Base URL for webhooks (used by Twilio to call your application)
# Example: https://yourapp.com or http://localhost:8000
BASE_URL=http://localhost:8000

# ============================================================================
# Logging Configuration
# ============================================================================

LOG_LEVEL=INFO
